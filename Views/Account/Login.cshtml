@model LoginViewModel
@inject RealEstatePro.Services.ITranslationService TranslationService
@{
    var currentCulture = Context.Request.Cookies["Language"] ?? "en";
    var t = TranslationService.GetTranslations(currentCulture);
    ViewData["Title"] = t["nav_login"];
}

<div class="container" style="padding: 2rem 1.25rem;">
    <div class="form-container">
        <h2 style="text-align: center; margin-bottom: 2rem;">@t["nav_login"]</h2>
        
        <form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label">@t["email"]</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label">@t["password"]</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary" style="width: 100%;">@t["login"]</button>
        </form>
        
        <div style="text-align: center; margin-top: 1.5rem;">
            <p>@t["dont_have_account"] <a asp-action="Register" style="color: var(--primary); font-weight: 600;">@t["nav_signup"]</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
